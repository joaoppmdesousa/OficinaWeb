@model OficinaWeb.Data.Entities.CarModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CarBrandId" value="@ViewBag.CarBrandId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" asp-route-brandId="@ViewBag.CarBrandId" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


