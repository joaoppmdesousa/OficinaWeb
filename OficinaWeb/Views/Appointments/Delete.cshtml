@model OficinaWeb.Data.Entities.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Time Slot
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("HH:mm") / @Model.AppointmentEnd.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleDescription)
        </dd>

    </dl>

    <p class="alert alert-info"> On deleting it will send an email to warn the client.</p>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </form>
    @if (TempData["Failed"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Failed"]
        </div>
    }

</div>
