@model OficinaWeb.Data.Entities.RepairAndServices

@{
    ViewData["Title"] = "Details";
}

<h1>Invoice</h1>

<div>
    <h4>RepairAndServices</h4>
    <hr />
  


    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceTypeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanics)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MechanicsNames)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeginDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.BeginDate.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.EndDate.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServicePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicePrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parts)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Parts != null && Model.Parts.Any())
            {
                <ul>
                    @foreach (var part in Model.Parts)
                    {
                        <li>@part.Name - @part.UnitPrice.ToString("C")</li>
                    }
                </ul>
            }
            else
            {
                <span>No parts used.</span>
			}
           
        </dd>

        <dt class="col-sm-2">
            Full Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>


    </dl>
</div>
<div>
    @if (ViewData["FromMyServices"] != null && (bool)ViewData["FromMyServices"])
    {
        <a asp-action="MyServices" asp-route-id="@ViewData["VehicleId"]" class="btn btn-outline-primary">Back to Services</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    }

  
</div>
