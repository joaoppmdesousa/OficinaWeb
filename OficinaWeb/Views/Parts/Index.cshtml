@model IEnumerable<OficinaWeb.Data.Entities.Part>

@{
    ViewData["Title"] = "Index";
}

<h2>Parts For Service #@ViewBag.ServiceId</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Add Part</a>
    <a asp-controller="RepairAndServices" asp-action="Index" class="btn btn-outline-primary">Back to Service List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
